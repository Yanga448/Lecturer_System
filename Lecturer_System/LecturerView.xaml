<Window x:Class="ContractMonthlyClaimSystemWPF.LecturerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Claim Submission" Height="350" Width="400">
    <Grid>
        <TextBlock Text="Submit Claim" FontSize="20" FontWeight="Bold" VerticalAlignment="Top" Margin="10" />

        <TextBlock Text="Hours Worked:" VerticalAlignment="Top" Margin="10,50,0,0" />
        <TextBox Name="HoursWorked" Width="200" Margin="120,50,10,0" VerticalAlignment="Top" />

        <TextBlock Text="Total Amount:" VerticalAlignment="Top" Margin="10,100,0,0" />
        <TextBox Name="TotalAmount" Width="200" Margin="120,100,10,0" VerticalAlignment="Top" />

        <Button Content="Upload Supporting Documents" Width="200" Margin="10,150,10,0" VerticalAlignment="Top" Background="#FF6BE40B" />

        <Button Content="Submit Claim" Width="100" Height="30" Margin="150,200,0,0" VerticalAlignment="Top" Background="#FF7ADA0C" />
    </Grid>
</Window>
