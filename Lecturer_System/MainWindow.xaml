<Window x:Class="Lecturer_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecturer Claim System" Height="350" Width="525">
    <Grid>
        <TextBlock FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">Lecturer Dashboard</TextBlock>

        <Label Content="Submit Claim:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <Button Content="Submit" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,50,0,0" Width="106"/>

        <Label Content="Upload Documents:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0"/>
        <Button Content="Upload" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,100,0,0" Width="106"/>

        <Label Content="Track Claim Status:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,150,0,0"/>
        <Button Content="Track" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,150,0,0" Width="106"/>
    </Grid>
</Window>
